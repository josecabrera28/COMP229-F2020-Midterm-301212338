<%- include ../partials/header.ejs %>

<%- include ../partials/top_nav.ejs %>
 
<main class="container">
  <h1><%= title %></h1>
  <p>Welcome to <%= title %></p>
  <button type="button" class="btn btn-outline-success"><a href='/employees/add'>Add Employee</a></button>
  <table class="table table-hover">
    <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Address</th>
          <th scope="col">Contact Number</th>
          <th scope="col">Delete</th>
        </tr>
        <tbody>
            <% for (let index = 0; index < employeeList.length; index++) { %>
                <tr>
                    <td><%= employeeList[index].name %></td>
                    <td><%= employeeList[index].address %></td>
                    <td><%= employeeList[index].phone %></td>
                    <td>
                      <a href="/employees/delete/<%= employeeList[index].id %>" id="btn_delete" class="btn btn-danger btn-sm"><i class="fa-solid fa-delete-left fa-lg"></i>&nbsp;Delete</a>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </thead>
  </table>
</main>

<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>