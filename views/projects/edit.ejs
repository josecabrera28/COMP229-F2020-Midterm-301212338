<%- include ../partials/header.ejs %>

<%- include ../partials/top_nav.ejs %>
 
<main class="container">
  <h1><%= title %></h1>
  <p>Welcome to <%= title %></p>
  <form method="POST">
    <div class="form-group">
      <label for="name">Project title:</label>
      <input type="text" class="form-control" id="name" name="title" value="<%= project.title %>">
    </div>
    <div class="form-group">
      <label for="artist">Project Description:</label>
      <input type="textarea" class="form-control" id="artist" name="description" value="<%= project.description %>">
    </div>
    <div class="form-group">
      <label for="duration">Deadline:</label>
      <input type="date" class="form-control" id="duration" name="deadline" value="<%= project.deadline %>">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</main>

<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>