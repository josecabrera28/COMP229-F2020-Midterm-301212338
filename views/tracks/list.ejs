<%- include ../partials/header.ejs %>

<%- include ../partials/top_nav.ejs %>
 
<main class="container">
  <h1><%= title %></h1>
  <p>Welcome to <%= title %></p>
  <button type="button" class="btn btn-outline-success"><a href='/tracks/add'>Add Track</a></button>
  <table class="table table-hover">
    <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Artist</th>
          <th scope="col">Duration [sec]</th>
          <th scope="col">Year</th>
          <th scope="col">Edit</th>
          <th scope="col">Delete</th>
        </tr>
        <tbody>
            <% for (let index = 0; index < TracksList.length; index++) { %>
                <tr>
                    <td><%= TracksList[index].name %></td>
                    <td><%= TracksList[index].artist %></td>
                    <td> <%= TracksList[index].duration %></td>
                    <td> <%= TracksList[index].year %></td>
                    <td>
                      <a href="/tracks/edit/<%= TracksList[index].id %>" class="btn btn-info btn-sm"><i class="fa-solid fa-file-pen fa-lg"></i>&nbsp;Edit</a>
                    </td>
                    <td>
                      <a href="/tracks/delete/<%= TracksList[index].id %>" id="btn_delete" class="btn btn-danger btn-sm"><i class="fa-solid fa-delete-left fa-lg"></i>&nbsp;Delete</a>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </thead>
  </table>
</main>

<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>