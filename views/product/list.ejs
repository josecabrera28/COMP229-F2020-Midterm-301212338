<%- include ../partials/header.ejs %>

<%- include ../partials/top_nav.ejs %>
 
<main class="container">
  <h1><%= title %></h1>
  <p>Welcome to <%= title %></p>
  <button type="button" class="btn btn-outline-success"><a href='/products/add'>Add Product</a></button>
  <table class="table table-hover">
    <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Company</th>
          <th scope="col">Price</th>
          <th scope="col">Edit</th>
          <th scope="col">Delete</th>
        </tr>
        <tbody>
            <% for (let index = 0; index < ProductList.length; index++) { %>
                <tr>
                    <td><%= ProductList[index].name %></td>
                    <td><%= ProductList[index].company %></td>
                    <td>$ <%= ProductList[index].price %></td>
                    <td>
                      <a href="/products/edit/<%= ProductList[index].id %>" class="btn btn-info btn-sm"><i class="fa-solid fa-file-pen fa-lg"></i>Edit</a>
                    </td>
                    <td>
                      <a href="/products/delete/<%= ProductList[index].id %>" id="btn_delete" class="btn btn-danger btn-sm"><i class="fa-solid fa-delete-left fa-lg"></i>Delete</a>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </thead>
  </table>
</main>

<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>